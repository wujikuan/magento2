<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
       <!--  引入我们自己的css -->
        <css src="js/OwlCarousel2-2.3.4/dist/assets/owl.carousel.css"/>
        <css src="js/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.css"/>
    </head>
    <body>
        <!--  定义一个block (bannerslider)，放到页面顶部 -->
    	<referenceBlock name="page.top">
        	<block class="Magento\Framework\View\Element\Template" name="bannerslider" template="Magento_Cms::html/homepage/home-bannerslider.phtml"/>
        </referenceBlock>
        <!--  在内容主体(content)部分 添加我们自己的block (zou_home_content) -->
        <referenceBlock name="content">
	  		<block class="Magento\Framework\View\Element\Template" name="zou_home_content" before="home_block_container" template="Magento_Cms::html/homepage/home_content.phtml"/>
        </referenceBlock>
        <!-- 删除cms_page这个block -->
        <referenceBlock name="cms_page" remove="true"/>
    </body>
</page>
